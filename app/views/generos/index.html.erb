<div class="container mt-5">
  <h2 class="text-center mb-4">Gêneros de Filmes</h2>

  <% if @generos.any? %>
    <div class="row">
      <% @generos.each do |genero| %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm h-100">
            <div class="card-body text-center">
              <h5 class="card-title"><%= genero.nome %></h5>
              <p class="text-muted mb-3">
                <%= pluralize(genero.filmes.count, "filme") %>
              </p>
              <%= link_to "Ver filmes", genero_path(genero), class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center mt-4">
      <%= paginate @generos, theme: 'bootstrap-5' %>
    </div>
  <% else %>
    <p class="text-center text-muted">Nenhum gênero cadastrado.</p>
  <% end %>
</div>

