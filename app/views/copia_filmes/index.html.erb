<p style="color: green"><%= notice %></p>

<% content_for :title, "Copia filmes" %>

<h1>Copia filmes</h1>

<div id="copia_filmes">
  <% @copia_filmes.each do |copia_filme| %>
    <%= render copia_filme %>
    <p>
      <%= link_to "Show this copia filme", copia_filme %>
    </p>
  <% end %>
</div>

<div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mt-3">
  <%= paginate @copia_filmes, theme: 'bootstrap-5' %>
  <%= link_to "New copia filme", new_copia_filme_path %>
</div>
